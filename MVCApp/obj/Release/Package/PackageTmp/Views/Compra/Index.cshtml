<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Id compra</th>
            <th scope="col">Fecha de compra</th>
            <th scope="col">Fecha de vencimiento</th>
            <th scope="col">Paquetes Comprados</th>
            <th scope="col">Cancelada</th>
            <th scope="col">Total Compra</th>

        </tr>
    </thead>
    <tbody>
        @foreach (Compra item in ViewBag.Compras)
        {


            <tr>
                <th scope="row"></th>
                <td>@item.Id</td>
                <td>@item.Fecha </td>
                <td>@item.FechaVencimiento</td>
                <td>@item.GetDetalleCompra()</td>
                <td>@item.Cancelada</td>
                <td>@item.GetTotalCompra()</td>

            </tr>
        }
    </tbody>

</table>

