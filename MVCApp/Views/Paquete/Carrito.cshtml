@using Dominio
@{
    ViewBag.Title = "Carrito";
}

<!--  method="post" action="/compra/TerminarCompra" -->
<form class="form-group">
    <input type="text" value="@ViewBag.paquete.Nombre" name="nombrePaquete" disabled />
    <input type="text" value="@ViewBag.paquete.Promocion" disabled />
    <input type="text" value="@ViewBag.paquete.PrecioBase" disabled />
    <input type="text" value="@ViewBag.paquete.Canales" disabled />

    <!-- <input type="submit" value="Comprar" /> -->
</form>


<div class="shopping-cart">
    <!-- Titulo -->
    <div class="titulo">
        Carrito de Compras
    </div>


    <div class="container">
        <div class="row">
            <!-- Elementos generados a partir del JSON -->
            <section id="items" class="col-sm-8 row">

                <!--datos del paquete-->
                <!-- mostrar info paquete...-->
                <input type="text" id="nombrePaquete" value="@ViewBag.paquete.Nombre" />



                <button class="plus-btn" type="button" name="button" id="btnMas">
                    +
                </button>
            </section>
            <!-- Carrito -->
            <aside class="col-sm-4">
                <h2>Carrito</h2>
                <!-- Elementos del carrito -->
                <ul id="carrito" class="list-group"></ul>
                <hr>
                <!-- Precio total -->
                <p class="text-right">Total: <span id="total"></span>&euro;</p>
                <button id="boton-vaciar" class="btn btn-danger">Vaciar</button>
            </aside>
        </div>
    </div>


    <button id="btnsubmit">Comprar</button>
    <button id="btnCancelar">Cancelar</button>
</div>





@section scripts {

    <script>

        //
        let btnMas = document.getElementById("btnMas");
        let nombrePaquete = document.getElementById("nombrePaquete");

        btnMas.addEventListener('click', () => {
            let li = document.createElement('li');
            li.textContent = nombrePaquete.value;

            let carrito = document.getElementById("carrito");
            carrito.appendChild(li);
        })



    </script>


}